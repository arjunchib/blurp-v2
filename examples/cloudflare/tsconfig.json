{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@blurp/common",
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "es2022",
    "moduleResolution": "nodenext",
    "types": ["@cloudflare/workers-types"],
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}
