{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@disco/cloudflare",
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "es2022",
    "moduleResolution": "node",
    "types": ["@cloudflare/workers-types"],
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // Needed locally for VSCode
    "baseUrl": ".",
    "paths": {
      "@disco/cloudflare/jsx-runtime": ["../../jsx-runtime.ts"]
    }
  },

  "ts-node": {
    "transpileOnly": true
    // "files": true,
    // "compilerOptions": {}
  }
}
